    <%= form_for(@user) do |f| %>
      <%= f.text_field :first_name, class: "form_target", :placeholder => "First name" %>
      <%= f.text_field :last_name, :placeholder => "Last name" %>
      <%= f.text_field :username, :placeholder => "Username" %>
      <%= f.text_field :region, :placeholder => "Region" %>
      <%= radio_button_tag(:role, "user") %>
	  <%= label_tag(:role_user, "User") %>
	  <%= radio_button_tag(:role, "admin") %>
	  <%= label_tag(:role_admin, "Admin") %>
      <%= f.password_field :password, :placeholder => "Password" %>
      <%= f.submit "Create an account", class: "btn-submit" %>
    <% end %>