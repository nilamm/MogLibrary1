<div class="col-sm-9 col-sm-offset-2 checkout_form">
	<div class="title">
		<h3>Comment by <span><%= @user.name_and_username %></span></h3>
	</div>
</div>
<div class="col-sm-8 col-sm-offset-2 checkout_form">
	<%= form_for @comment do |f| %>
		<div class="form-box">
			<div class="row">
				<div class="form-group">
					<%= f.label :content, 'Comment', class: 'col-sm-3 control-label' %>
					<div class="col-sm-9">
						<%= f.text_area :content, class: 'form-control form_target' %>
					</div>
				</div>
			<%= f.hidden_field :resource_id, value: @resource.id %>
			<%= f.hidden_field :user_id, value: @user.id %>
			</div>
			<div class="row">
				<div class-"form-group">
					<%= f.label :rating, 'Rating', class: 'col-sm-3 control-label' %>
					<div class="col-sm-9">
						<%= f.radio_button :rating, 1, checked: false, class: 'radio-inline' %>
						<%= f.label :rating, '1', value: 1, class: 'radio_label' %>
						<%= f.radio_button :rating, 2, checked: false, class: 'radio-inline' %>
						<%= f.label :rating, '2', value: 2, class: 'radio_label' %>
						<%= f.radio_button :rating, 3, checked: false, class: 'radio-inline' %>
						<%= f.label :rating, '3', value: 3, class: 'radio_label' %>
						<%= f.radio_button :rating, 4, checked: false, class: 'radio-inline' %>
						<%= f.label :rating, '4', value: 4, class: 'radio_label' %>
						<%= f.radio_button :rating, 5, checked: false, class: 'radio-inline' %>
						<%= f.label :rating, '5', value: 5, class: 'radio_label' %>
						<span class="best">(best)</span>
					</div>

				</div>
			</div>
			<div class="row">
				<div class="subm_edit_btn col-sm-9 col-sm-offset-3">
					<%= f.submit "Submit", class: 'btn-primary'%>
				</div>
			</div>
		</div>
	<% end %>
</div>
