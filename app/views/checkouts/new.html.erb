<div class="col-sm-10 col-sm-offset-1">
	<div class="row">
		<div>Check out <span><%= @resource.title %></span></div>
		<%= form_for @checkout do |f| %>
			<%= f.collection_select :user_id, User.all, :id, :name_and_username %>
			<%= f.number_field :num_checked, min: 1, value: 1, max: @resource.num_avail %>
			<%= f.text_area :notes %>
			<%= f.hidden_field :resource_id, value: @resource.id %>

			<div class="subm_edit_btn">
				<%= f.submit "Submit", class: 'btn-info active'%>
			</div>
		<% end %>
	</div>
</div>
