<% content_for :showing_results do %>
	testing results
<% end %>




<div class="row">
	<div class="col-xs-12 col-sm-1">
		<span class="rank"></span> <span class="expander">[+]</span>
	</div>
	<div class="col-xs-10 col-sm-9">
		<div class="writer_row">
			<% if resource.composer.present? %>
				<%= resource.composer %>, author/composer.
			<% end %>
			<% if resource.arranger.present? %>
				<%= resource.arranger %>, arranger.
			<% end %>
			<% if resource.libretto.present? %>
				<%= resource.libretto %>, libretto/text.
			<% end %>
		</div>
		<div class="title_row">
			<span class="title_text"><%= resource.title %></span>
			<span class="type">
				<% if resource.res_type.present? %>
					[<%= resource.res_type %>]
				<% end %>
			</span>
		</div>
		<div class="voice_lang_row">
			<% if resource.voice.present? %>
				<%= resource.voice %> | 
			<% end %>
			<%= resource.language %>
		</div>
		<div class="avail_row">
			[<%= resource.num_tot %> of <%= resource.num_avail %> copies available]
		</div>
		<div class="moreinfo_sect">
			This section will be hidden until item is clicked. Includes additional info on the item, and options to interact (comment, check out, etc.).
		</div>
	</div>
	<div class="col-xs-2 pic_col">
		<div class="pic_link">
			<% if resource.link.present? && resource.pic.present? %>
				<%= link_to (image_tag resource.pic), resource.link, :target => "_blank", :class => "img-responsive"  %>
			<% elsif  resource.link.present? %>
				<%= link_to "[link]", resource.link, :target => "_blank" %>
			<% elsif resource.pic.present? %>
				<%= image_tag resource.pic, :class => "img-responsive" %>
			<% end %>
		</div>
		<div class="rating">
			3 stars
		</div>
	</div>
</div>



